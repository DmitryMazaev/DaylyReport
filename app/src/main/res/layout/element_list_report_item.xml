<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/element_list_report_recycler">
    <TextView
        style="@style/heading_report_style"
        android:id="@+id/key_dayly_report_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key_report_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        style="@style/edit_text_report_style"
        android:id="@+id/key_dayly_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        app:layout_constraintBottom_toBottomOf="@+id/key_dayly_report_text"
        app:layout_constraintStart_toEndOf="@+id/key_dayly_report_text"
        />
    <TextView
        style="@style/heading_report_style"
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_of_report_text"
        app:layout_constraintTop_toBottomOf="@+id/key_dayly_report_text"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        style="@style/edit_text_report_style"
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XX.XX.XXXX"
        app:layout_constraintBottom_toBottomOf="@+id/date_text"
        app:layout_constraintStart_toEndOf="@+id/date_text"
        />
    <TextView
        style="@style/heading_report_style"
        android:id="@+id/construction_object_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/object_text"
        app:layout_constraintTop_toBottomOf="@+id/date_text"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        style="@style/edit_text_report_style"
        android:id="@+id/construction_object"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Объект 1"
        app:layout_constraintBottom_toBottomOf="@+id/construction_object_text"
        app:layout_constraintStart_toEndOf="@+id/construction_object_text"
        />
    <TextView
        style="@style/heading_report_style"
        android:id="@+id/foreman_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/foreman_text"
        app:layout_constraintTop_toBottomOf="@+id/construction_object_text"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        style="@style/edit_text_report_style"
        android:id="@+id/foreman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Иванов Иван Иванович"
        app:layout_constraintBottom_toBottomOf="@+id/foreman_text"
        app:layout_constraintStart_toEndOf="@+id/foreman_text"
        />

</androidx.constraintlayout.widget.ConstraintLayout>