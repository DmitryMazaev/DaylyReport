<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ReportFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/quiz_fragment">
        <TextView
            style="@style/heading_report_style"
            android:id="@+id/construction_object_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/construction_object_text"
            />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/edit_text_report_style"
            android:id="@+id/construction_object_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/construction_object_text"
            app:layout_constraintStart_toStartOf="@+id/construction_object_text"
            app:layout_constraintEnd_toEndOf="@+id/construction_object_text"
            android:hint="@string/construction_object_edit_text"
            app:endIconMode="clear_text">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/construction_object_edit_text_for_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            style="@style/button_style"
            android:id="@+id/buttonDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_date_and_time_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/construction_object_edit_text"/>
        <TextView
            android:id="@+id/date_text"
            style="@style/heading_report_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/buttonDate"
            app:layout_constraintTop_toBottomOf="@+id/buttonDate"
            android:text="@string/date_text"/>
        <TextView
            android:id="@+id/date_from_date_and_time"
            style="@style/edit_text_report_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/date_text"
            app:layout_constraintBottom_toBottomOf="@+id/date_text"
            android:text="@string/from_date_text"/>
        <TextView
            android:id="@+id/time_text"
            style="@style/heading_report_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/time_from_date_and_time"
            app:layout_constraintTop_toBottomOf="@+id/buttonDate"
            android:text="@string/date_text"/>
        <TextView
            android:id="@+id/time_from_date_and_time"
            style="@style/edit_text_report_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/buttonDate"
            app:layout_constraintBottom_toBottomOf="@+id/date_text"
            android:text="@string/from_date_text"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>